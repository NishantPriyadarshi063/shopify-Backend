# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_db
DB_USER=your_user
DB_PASSWORD=your_password
DB_SCHEMA=shopify_return_cancel
# Use SSL for remote Postgres (default: true). If you get certificate errors, set to false.
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=true

# Shopify (use same store/token as your existing dashboard integration)
SHOPIFY_SHOP=tiltingheads.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxx
# Or from DB if you store per-brand: fetch from shopify_stores / brand_envs

# File storage (S3 or Cloudinary for return/refund images and chat attachments)
S3_BUCKET=
S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Or: CLOUDINARY_URL=cloudinary://key:secret@cloud_name

# Admin auth (if using JWT)
JWT_SECRET=your-secret-min-32-chars

# Optional: Email (Resend / SendGrid) for “request received” and status updates
RESEND_API_KEY=
NOTIFICATION_FROM=noreply@tiltingheads.com
